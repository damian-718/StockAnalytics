FROM apache/airflow:2.8.1-python3.10

USER root

# Install Docker CLI so Airflow can run docker-compose commands
RUN apt-get update && \
    apt-get install -y docker.io && \
    apt-get clean

USER airflow

# Install any extra Python packages Airflow needs
COPY requirements.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt